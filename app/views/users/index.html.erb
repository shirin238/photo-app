<div class="container justify-content-xl-center">

  <h1>Users</h1>

  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col" colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to "Show", user %></td>
          <td><%= link_to "Show", user %></td>
          <td><%= link_to 'Delete', user, data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" }, 
                                          class: "btn btn-outline-warning" %></td> 

        </tr>
      <% end %>
    </tbody>
  </table>

</div>



