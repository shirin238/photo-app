
<br>

<div class="container justify-content-xl-center">

  <h1>Users</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col" colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to "Show", user %></td>
          <td>...</td>
          <td>...</td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>



